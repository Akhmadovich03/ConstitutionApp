<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OfferActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/offer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        app:title="TAKLIFLAR"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/back_icon"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/offer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TAKLIFLARINGIZNI BATAFSIL VA TUSHUNARLI QILIB KIRITING"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/offer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_button"
        android:text="Jo'natish"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="8dp"/>

</LinearLayout>